                <![CDATA[Video Ad]]>
            </AdTitle>
            <Impression>
                <![CDATA[{$IMPRESSION_TRACK_URL$}]]>
            </Impression>
            <Creatives>
                <Creative id="1" sequence="1">
                    <Linear skipoffset="00:00:05">
                        <Duration>
                            00:00:30
                        </Duration>
                        <TrackingEvents>
                            <Tracking event="start">
                                <![CDATA[https://localhost:3090/video-start]]>
                            </Tracking>
                            <Tracking event="firstQuartile">
                                <![CDATA[https://localhost:3090/video-firstQuartile]]>
                            </Tracking>
                            <Tracking event="midpoint">
                                <![CDATA[https://localhost:3090/video-midpoint]]>
                            </Tracking>
                            <Tracking event="thirdQuartile">
                                <![CDATA[https://localhost:3090/video-thirdQuartile]]>
                            </Tracking>
                            <Tracking event="complete">
                                <![CDATA[https://localhost:3090/video-complete]]>
                            </Tracking>
                            <Tracking event="skip">
                                <![CDATA[https://localhost:3090/video-skip]]>
                            </Tracking>
                        </TrackingEvents>
                        <VideoClicks>
                            <ClickThrough>
                                <![CDATA[{$CLICK_THROUGH_URL$}]]>
                            </ClickThrough>
                            <ClickTracking>
                                <![CDATA[{$ASYNC_CLICK_URL$}]]>
                            </ClickTracking>
                        </VideoClicks>
                        <MediaFiles>
                            <MediaFile delivery="progressive" bitrate="496" type="video/mp4" width="1080" height="1920">
                                <![CDATA[https://d3jdaktv9qp9iu.cloudfront.net/c/uUG5FNBucTqxB4tBIehesesk.mp4]]>
                            </MediaFile>
                        </MediaFiles>
                    </Linear>
                </Creative>
                <Creative adID="{$CRID$}-Companion">
                    <CompanionAds required="none">
                        <Companion width="1080" height="1920">
                            <HTMLResource>
                                <![CDATA[<html>
                                    <head>
                                        <meta charset="utf-8">
                                        <meta name="viewport" content="width=device-width,user-scalable=no,initial-scale=1,minimum-scale=1,maximum-scale=1">
                                        <meta name="apple-mobile-web-app-capable" content="yes">
                                        <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
                                        <meta name="format-detection" content="telephone=no">
                                        <meta name="renderer" content="webkit">
                                        <meta name="force-rendering" content="webkit">
                                        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
                                        <meta name="msapplication-tap-highlight" content="no">
                                        <meta name="full-screen" content="yes">
                                        <meta name="x5-fullscreen" content="true">
                                        <meta name="360-fullscreen" content="true">
                                        <meta name="screen-orientation" content="">
