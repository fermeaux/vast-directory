                                        <div id="ClickContainer" style="position: absolute; z-index: 0.5; width: 100vw; height: 100vh;"></div>
                                        <canvas id="GameCanvas" oncontextmenu="event.preventDefault()" tabindex="0"></canvas>
                                        <script type="text/javascript">
                                            let clickTracking = "{$CLICK_TRACK_URL$}", clickThrough = "{$CLICK_THROUGH_URL$}", asyncClick = "{$ASYNC_CLICK_URL$}", exchangeId = "{$EXCHANGE_ID$}";
                                        </script>
                                        <script src="https://static-content-1.smadex.com/uploads/creative-testing/Playables/DragonCity/script_3clicks.js"></script>
                                    </body>
                                </html>
                            ]]>
                            </HTMLResource>
                            <CompanionClickThrough>
                                <![CDATA[http://google.com]]>
                            </CompanionClickThrough>
                            <CompanionClickTracking>
                                <![CDATA[http://localhost:3090/clicktracking]]>
                            </CompanionClickTracking>
                        </Companion>
                    </CompanionAds>
                </Creative>
            </Creatives>
        </InLine>
